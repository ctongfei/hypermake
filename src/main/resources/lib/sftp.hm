def $$name_read(file):
  ssh $$host 'cat $file'

def $$name_execute(command):
  ssh $$host '$command'

def $$name_mkdir(dir):
  ssh $$host 'mkdir -p $dir'

def $$name_link(src, dst):
  ssh $$host 'ln -s $src $dst'

def $$name_touch(file):
  ssh $$host 'touch $file'

def $$name_delete(file):
  ssh $$host 'rm $file'

def copy_from_local_to_$$name(src, dst):
  scp -r $src $$host:$dst

def copy_from_$$name_to_local(src, dst):
  scp -r $$host:$src $dst
